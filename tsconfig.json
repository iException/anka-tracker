{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "es2015",
            "es2015.promise"
        ],
        "types": [
            "node"
        ],
        "noEmitHelpers": true,
        "importHelpers": true
    },
    "include": [
        "src/**/*.ts",
        "./package.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
